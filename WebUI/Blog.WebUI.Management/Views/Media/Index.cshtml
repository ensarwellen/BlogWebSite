@model List<Blog.Model.Media>
@{
    ViewBag.Title = "Medias";
}
<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Medias</h1>
        <a href="@Url.Action("Add","Media")" class="btn btn-sm btn-primary shadow-sm">Yeni Media Ekle</a>
    </div>
    <p class="mb-4">
         Burada medialar listelenebilir.              
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Medias</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>.</th>
                        </tr>
                    </thead>                  
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>
                                    <a href="@Url.Action("Delete", "Media", new {id=item.Id})"class="btn btn-danger">Sil</a>

                                </td>
                            </tr>
                        }
                        
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
